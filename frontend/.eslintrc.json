{
	"parser": "babel-eslint",
	"env": {
		"es6": true
	},
	"parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 2018,
		"ecmaFeatures": {
			"experimentalDecorators": true,
			"jsx": true
		}
	},
	"rules": {
		"no-undef": "off",
		"no-constant-condition": "off",
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"no-console": 0,
		"no-empty-pattern": 0
	}
}
